.container {
  position: relative;
  display: flex;
  flex-direction: column;
  width: 240rpx;
  height: 360rpx;
  margin-top: 30rpx;
  box-shadow: 2px 2px 3px #e3e3e3;
}
.container image {
  width: 100%;
  height: 100%;
  border-radius: 2px;
}
.description {
  display: flex;
  flex-direction: column;
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 5rpx 10rpx 8rpx 15rpx;
  border-bottom-right-radius: 2px;
  border-bottom-left-radius: 2px;
  box-sizing: border-box;
  font-size: 24rpx;
  background-color: #fff;
}
.title {
  margin-top: 10rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.author {
  margin-bottom: 10rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  font-size: 20rpx;
  color: #999;
}
.foot {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  font-size: 20rpx;
}
.footer {
  color: #666;
}