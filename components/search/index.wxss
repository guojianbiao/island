.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.header {
  position: fixed;
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 100rpx;
  width: 100%;
  border-top: 1px solid #f5f5f5;
  border-bottom: 1px solid #f5f5f5;
  z-index: 99;
  background-color: #fff;
}

.search-container {
  display: inline-flex;
  flex-direction: row;
  align-items: center;
  width: 610rpx;
  margin-left: 20rpx;
  border-radius: 50px;
  background-color: #f5f5f5;
}

.icon {
  width: 28rpx;
  height: 28rpx;
  margin-left: 24rpx;
  margin-right: 16rpx;
}

.bar {
  display: inline-block;
  height: 68rpx;
  width: 494rpx;
  border-top-right-radius: 15px;
  border-bottom-right-radius: 15px;
  font-size: 28rpx;
}

.in-bar {
  color: #999;
}

.cancel-img {
  width: 28rpx;
  height: 28rpx;
  margin-right: 20rpx;
}

.cancel {
  line-height: 68rpx;
  width: 120rpx;
  text-align: center;
  display: inline-block;
  border: none;
}

.history {
  display: flex;
  flex-direction: column;
  width: 690rpx;
  margin: 160rpx 0 20rpx 0;
  font-size: 28rpx;
}

.title {
  display: flex;
  flex-direction: row;
  align-items: center;
  line-height: 30rpx;
}

.chunk {
  width: 10rpx;
  height: 30rpx;
  margin-right: 20rpx;
  background-color: #000000;
}

.hot-search {
  margin-top: 70rpx;
}
