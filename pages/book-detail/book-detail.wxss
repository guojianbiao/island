.container {
  width: 100%;
  background-color: #f5f5f5;
}

.head {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 40rpx;
  padding-bottom: 40rpx;
  background-color: #ffffff;
}
.head image {
  width: 200rpx;
  height: 300rpx;
  box-shadow: 2px 2px 3px #e3e3e3;
}
.title {
  margin-top: 20rpx;
  color: #2f2f2f;
  font-size: 38rpx;
  font-weight: 600;
}
.author {
  margin-bottom: 30rpx;
  font-size: 28rpx;
  color: #999;
}

.sub-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 690rpx;
  margin-top: 30rpx;
  padding: 30rpx;
  background-color: #fff;
}
.comments-container {
   display: flex;
   flex-direction: row;
   flex-wrap: wrap;
}
.comments-container v-tag {
  margin-right: 15rpx;
  margin-bottom: 10rpx;
}
.headline {
  margin-bottom: 20rpx;
  font-size: 30rpx;
  font-weight: 600;
  color: #2f2f2f;
}
.num {
  margin-left: 10rpx;
  font-size: 22rpx;
  color: #aaa;
}
.ex-tag1 {
  background-color: #fffbdd !important;
}
.ex-tag2 {
  background-color: #eefbff !important;
}