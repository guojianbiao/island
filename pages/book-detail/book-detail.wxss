.container {
  width: 100%;
  background-color: #f5f5f5;
}

.head {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 40rpx;
  padding-bottom: 40rpx;
  background-color: #ffffff;
}
.head image {
  width: 200rpx;
  height: 300rpx;
  box-shadow: 2px 2px 3px #e3e3e3;
}
.title {
  margin-top: 20rpx;
  color: #2f2f2f;
  font-size: 38rpx;
  font-weight: 600;
}
.author {
  margin-bottom: 30rpx;
  font-size: 28rpx;
  color: #999;
}

.sub-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 690rpx;
  margin-top: 30rpx;
  padding: 30rpx;
  background-color: #fff;
}
.comments-container {
   display: flex;
   flex-direction: row;
   flex-wrap: wrap;
}
.comments-container v-tag {
  margin-right: 15rpx;
  margin-bottom: 10rpx;
}
.headline {
  margin-bottom: 20rpx;
  font-size: 30rpx;
  font-weight: 600;
  color: #2f2f2f;
}
.num {
  margin-left: 10rpx;
  font-size: 22rpx;
  color: #aaa;
}
.ex-tag1 {
  background-color: #fffbdd !important;
}
.ex-tag2 {
  background-color: #eefbff !important;
}
.content {
  padding: 0 16rpx;
  line-height: 48rpx;
  color: #999;
  text-indent: 64rpx;
  font-weight: 500;
}
.detail-container {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  width: 100%;
  margin-bottom: 100rpx;
  font-size: 28rpx;
  color: #666;
}
.description {
  margin-right: 30rpx;
  color: #999;
}
.vertical {
  display: flex;
  flex-direction: column;
}
.post-container {
  position: fixed;
  bottom: 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  height: 100rpx;
  width: 690rpx;
  padding: 0 30rpx;
  box-shadow: 1px -1px  1px #e3e3e3;
  background-color: #fff;
}
.post-fake {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 460rpx;
  height: 60rpx;
  padding-left: 20rpx;
  box-sizing: border-box;
  border-radius: 60rpx;
  border: 1px solid #999;
  font-size: 22rpx;
}
.like-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.like {
  margin-right: 30rpx;
  margin-top: 10rpx;
}
.posting-container {
  position: fixed;
  bottom: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  background-color: #fff;
  z-index: 999;
}
.post-header {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 100rpx;
  box-sizing: border-box;
  border-top: 1px solid #f5f5f5;
  border-bottom: 1px solid #f5f5f5;
}
.post-header text {
  padding: 25rpx;
}
.post-header > text:first-child {
  color: #bbb;
  font-size: 28rpx;
}
.cancel {
  color: #666;
}
.posting-container .comments-container {
  width: 100%;
  box-sizing: border-box;
  padding: 40rpx 30rpx 0 30rpx;
}
.post {
  width: 690rpx;
  height: 56rpx;
  margin: 30rpx auto;
  padding-left: 25rpx;
  border-radius: 15px;
  box-sizing: border-box;
  background-color: #f5f5f5;
  font-size: 22rpx;
}
